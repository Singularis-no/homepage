---
const {
  navn,
  timer,
  prisBedrift,
  prisPrivat,
  prosentRabatt,
  rabattBedrift,
  rabattPrivat,
  kunKontakt = false,
} = Astro.props;
import "../styles/priskort.css";
---

<div class="pris-kort" class:kun-kontakt={kunKontakt}>
  <div class="pris-kort-tittel">
    <h4 class="pris-kort-navn">{navn}</h4>
    {!kunKontakt && <span class="pris-kort-merke">-{prosentRabatt}%</span>}
  </div>
  {
    kunKontakt ? (
      <div class="pris-kort-kontakt-innhold">
        <p class="pris-kort-kontakt-undertekst">
          Kontakt oss for skreddersydd pakke for din bedrift
        </p>
      </div>
    ) : (
      <>
        <p class="pris-kort-timer">{timer} timer per måned</p>
        <p
          class="pris-kort-pris"
          data-bedrift={prisBedrift}
          data-privat={prisPrivat}
        >
          {prisBedrift} kr per måned <span class="pris-kort-mva">eks. mva</span>
        </p>
        <p
          class="pris-kort-rabatt"
          data-bedrift={rabattBedrift}
          data-privat={rabattPrivat}
        >
          Spar {rabattBedrift} kr mot timespris
        </p>
      </>
    )
  }
</div>
