---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import favicon from "../images/favicon.jpeg";
const { pageTitle, description } = Astro.props;
---

<html lang="no">
  <head>
    <meta charset="utf-8" />
    <!-- Favicon varieties: JPEG/PNG (general), SVG (modern), Apple touch, Safari pinned -->
    <link rel="icon" type="image/jpeg" href={favicon.src} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href={favicon.src} />
    <link rel="mask-icon" href="/favicon.svg" color="#715aff" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    {description && <meta name="description" content={description} />}
    <title>{pageTitle}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
        rel="stylesheet"
      />
    </noscript>
  </head>
  <body>
    <Header />
    <main class="page-content">
      <slot />
    </main>
    <Footer />
  </body>
</html>
